// Tela de Dados

struct DiceView: View {
    @State private var randomNumber = 1
    
    var body: some View {
        ZStack {
            Image("fundo3")
                .resizable()
                .scaledToFill()
                .edgesIgnoringSafeArea(.all)
            
            VStack {
               
                Text(" ")
                
                Text("CLICAR no NÚMERO:")
                    .font(.custom("Cochin", size: 23))
                    .bold()
                
                Text("= LANÇAR o DADO")
                    .font(.custom("Cochin", size: 27))
                    .foregroundColor(Color(red: 0.50, green: 0.12, blue: 0.16))
                    .italic()
                    .bold()
                    .padding()
                
                Image("dado1")
                    .resizable()
                    .aspectRatio(contentMode: .fit)
                    .frame(width: 250, height: 225)
                
                Divider()
                    .padding()
                Text("O dado possui 12 Lados, caso apareça o 0, lance novamente.")
                    .font(.custom("Cochin", size: 17))
                    .italic()
                
                Text("\(randomNumber)")
                    .font(.custom("Copperplate", size: 237))
                    .foregroundColor(Color(red: 0.50, green: 0.12, blue: 0.16))
                    .bold()
                    .padding()
                    .onTapGesture {
                        // Gerar um novo número aleatório
                        randomNumber = Int.random(in: 0...12)
                        
                    }
            }
        }
    }
}

#Preview {
    DiceView()
}

